%%%%% technology languages
% input: language, stars
\newcommand{\cvskill}[2]{%
  {\textbf{#1}}\hfill
  \BeginAccSupp{method=plain,ActualText={#2}}
  \foreach \x in {1,...,5}{%
    \ifdimequal{\x pt - #2 pt}{0.5pt}%
    {\clipbox*{0pt -0.25ex {.5\width} {\totalheight}}{\color{\defaultcolor}\faCircle}%
     \clipbox*{{.5\width} -0.25ex {\width} {\totalheight}}{\color{Gray!50}\faCircle}}
    {\ifdimgreater{\x bp}{#2 bp}{\color{Gray!50}}{\color{\defaultcolor}}\faCircle}%
  }
  \EndAccSupp{}
}

