%%%%% my contact info
\newcommand{\mycontactinfo}[1]{
    \sideruleline{#1}
    \begin{tikzpicture}[every node/.style={inner sep=1pt}]
        \matrix (contact) [
            ampersand replacement=\&,
	    	column 1/.style={anchor=west,contactIcon},
	    	column 2/.style={anchor=west,align=left,contactIcon},
	    	column sep=5pt,
	    	row sep=3pt
	    ]{\\
            \node{\normalsize{\faPhone}}; \& \node{\normalsize{+xx xx xxxx xxxx}};\\
            \node{\normalsize{\faEnvelopeO}}; \& \node{\href{mailto:your-email@mail.com}{\normalsize{your-address@mail.com}}};\\
            \node{\normalsize{\faLinkedinSquare}}; \& \node{\href[pdfnewwindow=true]{https://www.linkedin.com/in/your-username/}{\normalsize{linkedin/in/your-username}}};\\
            \node{\normalsize{\faGithub}}; \& \node{\href[pdfnewwindow=true]{https://github.com/your-username}{\normalsize{github.com/your-username}}};\\
            \node{\normalsize{\faMapMarker}}; \& \node{\normalsize{Your Location}};\\
        };
    \end{tikzpicture}
}

